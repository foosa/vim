	 */
	
	/*
	 * Author:    ${2:`g:snips_author`}
	 * Date:      `system("date '+%b\\ %d\\ %Y' | tr -d '\\n'")`
	 */

# section
snippet section
	/* -------------------------------------------------------------------------- *
	 * ${1:section}                                                                    *
	 * -------------------------------------------------------------------------- */
	${0}
# once
snippet guard
	#ifndef ${1:`toupper(vim_snippets#Filename('__$1_H__', 'UNTITLED_H'))`}
	#define $1

	${0}

	#endif /* end of include guard: $1 */
# decls
snippet decls
	#undef __BEGIN_DECLS
	#undef __END_DECLS
	#ifdef __cplusplus
		#define __BEGIN_DECLS extern "C" {
		#define __END_DECLS }
	#else
		#define __BEGIN_DECLS /* empty */
		#define __END_DECLS /* empty */
	#endif

	__BEGIN_DECLS

	${0}

	__END_DECLS
